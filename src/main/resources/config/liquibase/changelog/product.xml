<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <property name="now" value="now()" dbms="mysql,h2" />
  <property name="now" value="current_timestamp" dbms="postgresql" />

  <!-- Added the entity Product. -->
  <changeSet id="20150712020700" author="jhipster">
    <createTable tableName="product">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" />
      </column>
      <column name="buy_price" type="numeric(19,2)" />
      <column name="code" type="varchar(255)" />
      <column name="name" type="varchar(255)" />
      <column name="amount" type="int" />
      <column name="sell_price" type="numeric(19,2)" />
      <column name="version" type="bigint" />
      <column name="category_id" type="bigint" />
      <column name="product_color_id" type="bigint" />
      <column name="product_size_id" type="bigint" />
    </createTable>

    <addForeignKeyConstraint baseColumnNames="category_id" baseTableName="product"
      constraintName="fk_product_category_id" referencedColumnNames="id" referencedTableName="category" />

    <addForeignKeyConstraint baseColumnNames="product_color_id" baseTableName="product"
      constraintName="fk_3d36qfa3ollj185kc7ik6dnbg" referencedColumnNames="id" referencedTableName="product_color" />

    <addForeignKeyConstraint baseColumnNames="product_size_id" baseTableName="product"
      constraintName="fk_7n0gftkiecg343m325c8u5sr1" referencedColumnNames="id" referencedTableName="product_size" />

    <loadData encoding="UTF-8" file="config/liquibase/product.csv" separator="," tableName="product">
    </loadData>

    <dropSequence sequenceName="product_id_seq" />

    <createSequence incrementBy="1" maxValue="9223372036854775807" minValue="1"
      startValue="16" sequenceName="product_id_seq" />

  </changeSet>
</databaseChangeLog>
